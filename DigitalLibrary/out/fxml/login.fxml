<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="LoginController" prefWidth="400" prefHeight="250">
    <children>
        <Label text="Login" layoutX="170" layoutY="20" style="-fx-font-size: 18px;"/>
        <Label text="Username:" layoutX="50" layoutY="70"/>
        <TextField fx:id="usernameField" layoutX="150" layoutY="70" prefWidth="200"/>
        <Label text="Password:" layoutX="50" layoutY="110"/>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="110" prefWidth="200"/>
        <Button text="Login" layoutX="150" layoutY="160" onAction="#login"/>
        <Button text="Register" layoutX="230" layoutY="160" onAction="#goToRegister"/>
        <Label fx:id="errorLabel" layoutX="150" layoutY="200" textFill="red"/>
    </children>
</AnchorPane>
